@page
@model BackendRazor.Pages.Admin.Matches.CreateModel
@{
    ViewData["Title"] = "Programare Meci Nou";
    string today = DateTime.Today.ToString("yyyy-MM-dd");
}

<div class="container mx-auto py-10 max-w-lg">
    <div class="bg-white shadow-2xl rounded-2xl p-8 border border-gray-100">
        <h1 class="text-3xl font-extrabold text-gray-800 mb-6 text-center">Schedule New Match</h1>

        <form method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm font-bold bg-red-50 p-3 rounded-lg"></div>

            <div>
                <label class="block text-sm font-bold text-gray-700 mb-2 italic">Select Match Date</label>
                <input asp-for="Match.Date" 
                       type="date" 
                       min="@today" 
                       class="w-full p-3 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none shadow-sm transition" 
                       required />
                <span asp-validation-for="Match.Date" class="text-red-500 text-xs font-semibold"></span>
            </div>

            <div class="grid grid-cols-1 gap-6">
                <div>
                    <label class="block text-sm font-bold text-gray-700 mb-2 italic">Home Team</label>
                    <select asp-for="Match.Idhome" asp-items="Model.TeamOptions" class="w-full p-3 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none shadow-sm transition" required>
                        <option value="">-- Choose Home Team --</option>
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-bold text-gray-700 mb-2 italic">Guest Team</label>
                    <select asp-for="Match.Idguest" asp-items="Model.TeamOptions" class="w-full p-3 border rounded-xl focus:ring-2 focus:ring-blue-500 outline-none shadow-sm transition" required>
                        <option value="">-- Choose Guest Team --</option>
                    </select>
                </div>
            </div>

            <div class="bg-yellow-50 p-4 rounded-xl border border-yellow-100 text-center">
                <p class="text-sm text-yellow-700 font-medium">
                    ⚠️ You are scheduling a future match. Scores can be added after the game via the Edit menu.
                </p>
            </div>

            <div class="flex flex-col gap-4 pt-4">
                <button type="submit" class="w-full bg-blue-600 text-white font-bold py-4 rounded-xl hover:bg-blue-700 transition shadow-lg transform hover:scale-[1.01]">
                    Create Match
                </button>
                <a asp-page="./Index" class="w-full bg-gray-100 text-gray-600 text-center py-4 rounded-xl font-bold hover:bg-gray-200 transition border border-gray-300">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}