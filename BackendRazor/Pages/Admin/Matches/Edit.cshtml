@page "{id:int}"
@model BackendRazor.Pages.Admin.Matches.EditModel
@{
    ViewData["Title"] = "Edit Stats";
}

<div class="container mx-auto py-6 px-4">
    <form method="post">
        <input type="hidden" asp-for="Match.Idmatch" />
        <input type="hidden" asp-for="Match.Idhome" />
        <input type="hidden" asp-for="Match.Idguest" />

        <div class="flex flex-col md:flex-row justify-between items-center mb-8 bg-white p-6 rounded-2xl border shadow-sm gap-4">
            <h1 class="text-2xl font-black text-gray-800 tracking-tight text-center md:text-left">
                Admin Match Panel
            </h1>
            
            <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto">
                <button type="button" 
                        onclick="resetStats()" 
                        class="w-full sm:w-auto bg-red-50 text-red-600 px-6 py-3 rounded-xl font-bold hover:bg-red-100 transition text-center border border-red-100">
                    Reset Stats
                </button>
                <button type="submit" 
                        class="w-full sm:w-auto bg-blue-600 text-white px-8 py-3 rounded-xl font-bold hover:bg-blue-700 transition shadow-lg shadow-blue-100 text-center">
                    Save Changes
                </button>
            </div>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-6 p-4 bg-red-50 text-red-700 border-l-4 border-red-500 rounded-r-xl shadow-sm">
                <div asp-validation-summary="All" class="font-medium"></div>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            
            <div class="bg-white p-6 rounded-2xl border h-fit shadow-sm space-y-5">
                <div>
                    <label class="block text-xs font-bold text-gray-400 uppercase mb-2 tracking-widest">Match Date</label>
                    <input asp-for="Match.Date" type="date" class="w-full border border-gray-200 rounded-xl p-3 focus:ring-2 focus:ring-blue-500 outline-none transition" />
                </div>
                
                <div class="pt-4 border-t border-gray-100">
                    <label class="block text-xs font-bold text-blue-600 uppercase mb-2 tracking-widest">Home Score</label>
                    <input asp-for="Match.Scorehome" type="number" class="w-full text-3xl font-black border border-blue-100 rounded-2xl p-4 text-center bg-blue-50/30 focus:ring-2 focus:ring-blue-500 outline-none transition" />
                </div>
                
                <div class="pt-4 border-t border-gray-100">
                    <label class="block text-xs font-bold text-green-600 uppercase mb-2 tracking-widest">Guest Score</label>
                    <input asp-for="Match.Scoreguest" type="number" class="w-full text-3xl font-black border border-green-100 rounded-2xl p-4 text-center bg-green-50/30 focus:ring-2 focus:ring-green-500 outline-none transition" />
                </div>
            </div>

            <div class="lg:col-span-3 space-y-10">
                <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
                    <div class="bg-blue-600 text-white px-6 py-3 font-bold italic tracking-wide flex items-center justify-between">
                        <span>🏠 @Model.Match.IdhomeNavigation?.Name</span>
                        <span class="text-xs uppercase opacity-80">Home Stats</span>
                    </div>
                    <div class="overflow-x-auto">
                        @{ RenderTable(Model.HomePlayers); }
                    </div>
                </div>

                <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
                    <div class="bg-green-600 text-white px-6 py-3 font-bold italic tracking-wide flex items-center justify-between">
                        <span>🚌 @Model.Match.IdguestNavigation?.Name</span>
                        <span class="text-xs uppercase opacity-80">Guest Stats</span>
                    </div>
                    <div class="overflow-x-auto">
                        @{ RenderTable(Model.GuestPlayers); }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@functions {
    void RenderTable(List<BackendRazor.Models.Player> players)
    {
        <table class="min-w-full text-sm">
            <thead class="bg-gray-50 text-xs uppercase text-gray-500 font-bold">
                <tr>
                    <th class="px-6 py-4 text-left">Player</th>
                    <th class="w-24 px-2 py-4 text-center">Pts</th>
                    <th class="w-24 px-2 py-4 text-center">Reb</th>
                    <th class="w-24 px-2 py-4 text-center">Ast</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @foreach (var p in players)
                {
                    <tr class="hover:bg-gray-50/50 transition">
                        <td class="px-6 py-3 font-bold text-gray-700 whitespace-nowrap">@p.Firstname @p.Lastname</td>
                        <td class="px-2 py-2">
                            <input type="number" name="PlayerStats[@p.Idplayer].Points" 
                                   value="@(Model.PlayerStats.ContainsKey(p.Idplayer) ? Model.PlayerStats[p.Idplayer].Points : "")" 
                                   class="stat-input w-full border border-gray-200 rounded-lg py-2 text-center focus:ring-2 focus:ring-blue-500 outline-none transition" />
                        </td>
                        <td class="px-2 py-2">
                            <input type="number" name="PlayerStats[@p.Idplayer].Rebounds" 
                                   value="@(Model.PlayerStats.ContainsKey(p.Idplayer) ? Model.PlayerStats[p.Idplayer].Rebounds : "")" 
                                   class="stat-input w-full border border-gray-200 rounded-lg py-2 text-center focus:ring-2 focus:ring-blue-500 outline-none transition" />
                        </td>
                        <td class="px-2 py-2">
                            <input type="number" name="PlayerStats[@p.Idplayer].Assists" 
                                   value="@(Model.PlayerStats.ContainsKey(p.Idplayer) ? Model.PlayerStats[p.Idplayer].Assists : "")" 
                                   class="stat-input w-full border border-gray-200 rounded-lg py-2 text-center focus:ring-2 focus:ring-blue-500 outline-none transition" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

<script>
    function resetStats() {
        if(confirm("Clear all player stats?")) {
            document.querySelectorAll('.stat-input').forEach(i => i.value = '');
        }
    }
</script>