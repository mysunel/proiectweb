@page "/Admin/Login"
@model MyApp.Namespace.LoginModel
@{
    ViewData["Title"] = "Admin - Login";
}
<h2 class="text-2xl font-bold mb-6">Admin Login</h2>

<form method="post" class="space-y-4">
    <input type="hidden" asp-for="ReturnUrl" />

    <div asp-validation-summary="ModelOnly" class="text-red-600 mb-2"></div>

    <div>
        <label asp-for="Email" class="block text-sm font-medium">Email</label>
        <input asp-for="Email" class="border rounded px-3 py-2 w-full" />
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label asp-for="Password" class="block text-sm font-medium">Password</label>
        <input asp-for="Password" type="password" class="border rounded px-3 py-2 w-full" />
        <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
    </div>

    <button type="submit" class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700">
        Login
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
