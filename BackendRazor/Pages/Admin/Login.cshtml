@page "/admin/login"
@model MyApp.Namespace.LoginModel
@{
}
<h1>Login Admin</h1>
<h2 class="text-2xl font-bold mb-6">Login</h2>

<form method="post" class="space-y-4">
    <div>
        <label asp-for="Email" class="block text-sm font-medium">Email</label>
        <input asp-for="Email" class="border rounded px-3 py-2 w-full" />
    </div>

    <div>
        <label asp-for="Password" class="block text-sm font-medium">Password</label>
        <input asp-for="Password" type="password" class="border rounded px-3 py-2 w-full" />
    </div>

    <button type="submit" class="bg-orange-600 text-white px-4 py-2 rounded hover:bg-orange-700">
        Login
    </button>
</form>
